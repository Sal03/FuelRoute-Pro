# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fuelroute-pro
NODE_ENV=development
PORT=5001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# FREE API Keys (No Credit Card Required)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENROUTE_SERVICE_KEY=your_openroute_service_key_here
GRAPHHOPPER_API_KEY=your_graphhopper_api_key_here
EIA_API_KEY=your_eia_api_key_here

# Optional: Premium APIs (require credit card)
# HERE_API_KEY=your_here_api_key_here
# MAPBOX_API_KEY=your_mapbox_api_key_here
# FREIGHTWAVES_API_KEY=your_freightwaves_api_key_here
# MARINE_TRAFFIC_API_KEY=your_marine_traffic_api_key_here

# JWT Secret (for future authentication)
JWT_SECRET=your_jwt_secret_here

